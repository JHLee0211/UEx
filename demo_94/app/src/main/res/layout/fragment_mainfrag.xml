<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.Fragment.basicFragment">
    <!--tools:context=".Fragment.main_Fragment"-->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">
        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="31dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@mipmap/plus" />
            </LinearLayout>

            <LinearLayout>
                <EditText
                    android:id="@+id/mainfrag_text_search"
                    android:layout_width="288dp"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:hint="시험명, 주제 등을 검색하세요"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </TableRow>


    </TableLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:background="@mipmap/line2"
                        android:fadingEdge="vertical|none">

                        <TextView
                            android:id="@+id/main_banner1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_span="3"
                            android:gravity="center_vertical"
                            android:text="@string/interest"
                            android:textColor="#353535"
                            android:textSize="14sp" />

                    </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical"
                                    >

                                    <ImageButton
                                        android:id="@+id/mainfrag_imgbtn_inter1"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                    <TextView
                                        android:id="@+id/mainfrag_text_inter1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="정보처리기사"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        app:fontFamily="sans-serif-condensed-light" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/mainfrag_imgbtn_inter2"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                        <TextView
                                            android:id="@+id/mainfrag_text_inter2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="한국사능력검정"
                                            android:textColor="#000000"
                                            android:textSize="12dp"
                                            app:fontFamily="sans-serif-condensed-light" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/mainfrag_imgbtn_inter3"
                                        android:layout_width="64dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                    <TextView
                                        android:id="@+id/mainfrag_text_inter3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="TOEIC Speaking"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        app:fontFamily="sans-serif-condensed-light" />

                                </LinearLayout>
                        </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="-1dp"
                        android:background="@mipmap/line"
                        android:fadingEdge="vertical|none">

                        <TextView
                            android:id="@+id/main_banner2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/hottest"
                            android:textColor="#353535"
                            android:textSize="14sp" />

                    </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/hottest_1"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                        <TextView
                                            android:id="@+id/textView11"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="3dp"
                                            android:text="정보보안기사"
                                            android:textColor="#000000"
                                            android:textSize="12dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/hottest_2"
                                        android:layout_width="68dp"
                                        android:layout_height="75dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                    <TextView
                                        android:id="@+id/textView12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="TOEIC"
                                        android:textColor="#000000"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="125dp"
                                    android:orientation="vertical">

                                    <ImageButton
                                        android:id="@+id/hottest_3"
                                        android:layout_width="75dp"
                                        android:layout_height="74dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/button_background"
                                        android:elevation="2dp"
                                        android:maxWidth="120dp"
                                        android:maxHeight="120dp"
                                        android:minWidth="120dp"
                                        android:minHeight="120dp"
                                        android:scaleType="centerInside" />

                                        <TextView
                                            android:id="@+id/textView13"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="SQLD"
                                            android:textColor="#000000"
                                            android:textSize="12dp" />
                                </LinearLayout>
                        </TableRow>
                </TableLayout>

        </ScrollView>
</LinearLayout>