<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/coding"
            android:gravity="center"
            android:text="삼성 SW 역량테스트 A형"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@mipmap/category_bar2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:text=" # 접수 기간"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom_right"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="시작일"
            android:textColor="@color/dayColor" />

        <TextView
            android:id="@+id/regist_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="2019.09.29 18:00"
            android:textColor="@color/dayColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom_right"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="마감일"
            android:textColor="@color/dayColor" />

        <TextView
            android:id="@+id/regist_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="2019.09.31 18:00"
            android:textColor="@color/dayColor" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@mipmap/category_bar2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:text=" # 시험 / 발표"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom_right"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="시험일"
            android:textColor="@color/dayColor" />

        <TextView
            android:id="@+id/test_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="2019.10.15 15:00"
            android:textColor="@color/dayColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom_right"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="발표일"
            android:textColor="@color/dayColor" />

        <TextView
            android:id="@+id/result_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="2019.10.30 08:00"
            android:textColor="@color/dayColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@mipmap/category_bar2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:text=" # 시험 설명"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text=" 이 시험은 매우 X같은 시험이다. \n 보지 않는 것을 권장합니다."
            android:textColor="@color/dayColor" />

    </LinearLayout>

    </LinearLayout>